<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="User" table="user">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="60" nullable="false"/>
    <field name="apellido" type="string" column="apellido" length="60" nullable="false"/>
    <field name="username" type="string" column="username" length="25" nullable="false"/>
    <field name="salt" type="string" column="salt" length="80" nullable="false"/>
    <field name="password" type="string" column="password" length="80" nullable="false"/>
    <field name="email" type="string" column="email" length="60" nullable="false"/>
    <field name="sexo" type="boolean" column="sexo" nullable="false"/>
    <field name="isActive" type="boolean" column="is_active" nullable="false"/>
    <field name="path" type="string" column="path" length="255" nullable="true"/>
    <field name="descripcion" type="text" column="descripcion" nullable="false"/>
  </entity>
</doctrine-mapping>
